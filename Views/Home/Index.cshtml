@using Microsoft.AspNetCore.Identity
@using Revoow.Areas.Identity

@inject SignInManager<RevoowUser> SignInManager
@inject UserManager<RevoowUser> UserManager

@{
    ViewData["Title"] = "Home Page";
    string redirect = "";

    if (SignInManager.IsSignedIn(User))
    {
        redirect = "/Identity/Account/Manage/Subscription";
    }
    else
    {
        redirect = "/Identity/Account/Register";
    }
}


<div class="container">
    <section id="hook">
        <div class="row justify-content-md-center text-center">
            <div class="col-md-6 text-left">
                <h1>Hassle Free</h1>
                <h1>Video Testimonials</h1>
                <h4>It's wicked easy and totally flexible.</h4>
                <a href="@redirect" class="btn btn-primary">Try Now - It's FREE</a>
            </div>
            <div class="col-md-6">
                <img src="./productdemp.png" alt="">
            </div>
        </div>
    </section>
    <section id="steps">
        <div class="row justify-content-md-center text-center">
            <div class="col-md-4">
                <i class="fa fa-link" style="color: #ff5757;font-size: 3rem;"></i>
                <p>Send your link to customers</p>
            </div>
            <div class="col">
                <i class="fa fa-video-camera" style="color:#7ed957; font-size: 3rem;"></i>
                <p>Customers leave a short 30-second review</p>
            </div>
            <div class="col">
                <i class="fa fa-paper-plane" style="color: #ffbd59; font-size: 3rem;"></i>
                <p>Video is published to your page</p>
            </div>
        </div>
    </section>
    <section id="checks">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="text-nowrap">
                    <div class="check">
                        <i class="fa fa-check "></i>
                    </div>
                    <span>Setup in minutes</span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-nowrap">
                    <div class="check">
                        <i class="fa fa-check "></i>
                    </div>
                    <span>No technical skills required</span>
                </div>
            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col-lg-6">
                <div class="text-nowrap">
                    <div class="check">
                        <i class="fa fa-check "></i>
                    </div>
                    <span>Higher website rankings</span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-nowrap">
                    <div class="check">
                        <i class="fa fa-check "></i>
                    </div>
                    <span>Get more customers</span>
                </div>
            </div>
        </div>
    </section>
    <section id="plans">
        <div class="row justify-content-center text-center">
            <div class="col">
                <h1>Simple fixed pricing</h1>
                <h3>Try RevoowMe today and see why others love it!</h3>
            </div>
        </div>
        <div class="container mb-5 mt-5 text-nowrap">
            <div class="pricing card-deck flex-column flex-lg-row mb-3">
                <div class="card card-pricing text-center px-3 mb-4">
                    <span class="h6 w-60 mx-auto px-4 py-1 rounded-bottom bg-primary text-white shadow-sm">Starter</span>
                    <input hidden id="PlanValue" value="0">
                    <div class="bg-transparent card-header pt-4 border-0">
                        <h1 class="h1 font-weight-normal text-primary text-center mb-0" data-pricing-value="15">$<span class="price">0</span><span class="h6 text-muted ml-2">/ per month</span></h1>
                    </div>
                    <div class="card-body pt-0">
                        <ul class="list-unstyled mb-4">
                            <li>10 testimonials / month</li>
                            <li>Custom link</li>
                            <li>&nbsp; </li>
                        </ul>
                        <a href="@redirect" class="btn btn-primary mb-3">Choose Plan</a>
                    </div>
                </div>
                <div class="card card-pricing  text-center px-3 mb-4">
                    <span class="h6 w-60 mx-auto px-4 py-1 rounded-bottom bg-primary text-white shadow-sm">Small business</span>
                    <input hidden id="PlanValue" value="1">
                    <div class="bg-transparent card-header pt-4 border-0">
                        <h1 class="h1 font-weight-normal text-primary text-center mb-0" data-pricing-value="30">$<span class="price">3.97</span><span class="h6 text-muted ml-2">/ per month</span></h1>
                    </div>
                    <div class="card-body pt-0">
                        <ul class="list-unstyled mb-4">
                            <li>10 Testimonials / month</li>
                            <li>Customer Support Access</li>
                            <li>&nbsp; </li>
                        </ul>
                        <a href="@redirect" class="btn btn-primary mb-3">Choose Plan</a>
                    </div>
                </div>
                <div class="card card-pricing text-center px-3 mb-4">
                    <span class="h6 w-60 mx-auto px-4 py-1 rounded-bottom bg-primary text-white shadow-sm">Professional</span>
                    <input hidden id="PlanValue" value="2">
                    <div class="bg-transparent card-header pt-4 border-0">
                        <h1 class="h1 font-weight-normal text-primary text-center mb-0" data-pricing-value="45">$<span class="price">11.97</span><span class="h6 text-muted ml-2">/ per month</span></h1>
                    </div>
                    <div class="card-body pt-0">
                        <ul class="list-unstyled mb-4">
                            <li>Unlimited Testimonials</li>
                            <li>Customer Support Access</li>
                            <li>Website Ranking Service</li>
                        </ul>
                        <a href="@redirect" class="btn btn-primary mb-3">Choose Plan</a>
                    </div>
                </div>

            </div>
        </div>

    </section>

</div>

