                    <label asp-for="Logo"></label>
                    <div class="input-group mb-3 justify-content-center">
                        <div class="input-group-prepend">
                        </div>
                        <label class="falseinput btn btn-primary">
                            Browse files
                            <input id="fileInput" style="display:none" class="fileinput" type="file" name="file" asp-for="Logo" autocomplete="off" />
                        </label>
                    </div>
                    <div id="fileName">
                    </div>
                    <div><span asp-validation-for="Logo" class="text-danger"></span></div>
                </div>*@

                <div class="form-group text-center pt-2">
                    <input type="submit" class="btn btn-primary" />
                </div>

            </div>
        </div>
    </form>

</div>
